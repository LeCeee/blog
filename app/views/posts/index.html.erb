<p id="notice"><%= notice %></p>

<%= link_to 'New Post', new_post_path %>


<% @posts.each do |post|%>
  <div id="index-contrainer" class="container-fluid">
    <div class="row">
        
        <div  class="col2">
           <%= image_tag("samoyed_body_image_33.jpg" , class: "icon_image") %>

        </div>

        <div class="col3">
          <h2><%= post.title %></h2>
          <h4> created by:<%= post.user.email %></h4>
          <p><%= truncate(post.content, :length => 100 ) %>
          <%= link_to "Read Post" , post %> 

          </p>

        </div>

    </div>

  </div>
 

  <hr>

<% end %>

