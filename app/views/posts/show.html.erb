<p id="notice"><%= notice %></p>

<div class="container">
	<p>
  		<strong>Title:</strong>
  		<%= @post.title %>
	</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>created by:</strong>
  <%= @post.user.email %>
</p>
<% if current_user.id == @post.user_id %>
		<%= link_to 'Edit', edit_post_path(@post) %> |
		<%= link_to 'Destroy', @post, method: :delete, remote:true, data: { confirm: 'Are you sure?' } %> |
<% end %> 
<%= link_to 'Back', posts_path %>
	
 

<h3> Add a comment: </h3>

<%= render 'comments/form' %>

<h2 id="comment-head"> <span id="number"><%= @post.comments.count %>  </span> comments</h2>

<%  @post.comments.each  do  |i| %>
  
  <p id="comments-container">
    <%= render 'comments/comments' , comments: i %>
    
  </p>

  
<%end%>

</div>